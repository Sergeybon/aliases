#### BROWSER ALIASES
# s - safari, g - google chrome, f - firefox
alias g="open -a Google\ Chrome"
alias f="open -a FireFox"
alias gi="open -na Google\ Chrome --args --incognito"
alias go="open -a Google\ Chrome https://outlook.office.com/mail/"
alias gio="open -na Google\ Chrome --args --incognito https://outlook.office.com/mail/"
alias gts="open -a Google\ Chrome https://teams.microsoft.com/"

